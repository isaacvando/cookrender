{
  "name": "cookrender",
  "displayName": "Cook Render",
  "description": "Convert .cook to .md",
  "publisher": "isaacvando",
  "icon": "icon.png",
  "license": "BSD3",
  "homepage": "https://github.com/isaacvando/cookrender",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaacvando/cookrender"
  },
  "keywords": [
    "cook",
    "preview",
    "render",
    "markdown"
  ],
  "version": "0.4.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:cookrender.enableRendering"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cookrender.enableRendering",
        "title": ".cook: enable rendering"
      }
    ],
    "configuration": [
      {
        "title": "Cook Render",
        "properties": {
          "cookrender.enableInlineIngredientQuantities": {
            "type": "boolean",
            "default": false,
            "description": "When enabled, quanities will be listed next to ingredients in the steps section."
          },
          "cookrender.enableInlineCookwareQuantities": {
            "type": "boolean",
            "default": false,
            "description": "When enabled, quanities will be listed next to cookware in the steps section."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@cooklang/cooklang-ts": "^1.2.2"
  }
}
